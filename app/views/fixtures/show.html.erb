<h2><%= @fixture.name %></h2>
<h3>Information</h3>
<ul>
  <li>Promotion: <%= link_to @fixture.track.promotion.name, promotion_path(@fixture.track.promotion)%></li>
  <li>Track: <%= link_to @fixture.track.name, track_path(@fixture.track) %></li>
</ul>
<% if @fixture.formula_fixtures.any? %>
    <h3>Formulas Racing</h3>
    <ul>
    <% @fixture.formula_fixtures.each do |ff| %>
        <li><%= link_to(ff.formula.name, formula_path(ff.formula)) %></li>
    <% end %>
    </ul>
<% end %>
<% if @fixture.formula_fixture_heats.any? %>
  <h3>Race Card</h3>
    <ul>
      <% @fixture.formula_fixture_heats.each do |h| %>
        <li><%= "Race #{h.race_number} - #{h.formula.short_name} - Heat #{h.heat_number} #{h.title} #{h.race_type}" %></li>
      <% end %>
    </ul>
<% end %>